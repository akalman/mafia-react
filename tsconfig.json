{
    "compilerOptions": {
        "target": "ES5",
        "outDir": "output",

        "alwaysStrict": true,
        "jsx": "React",
        "module": "commonjs",
        "newLine": "lf",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,

        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
